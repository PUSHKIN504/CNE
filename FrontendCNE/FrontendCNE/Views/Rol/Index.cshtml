@model IEnumerable<CNE.Common.Models.RolViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Roles</h1>

<p>
    
        <a asp-controller="Rol" class="btn btn-primary" asp-action="Create">Crear</a>
   
</p>
<table class="table table-striped table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Roles_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles_Descripcion)
            </th>





            <th> Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles_Descripcion)
                </td>

                <td style="width: 5%">
                    <div class="w-100" style="max-width: 250px">
                        <div class="d-flex w-100" style="gap: 5px;">
                            <a  href="@Url.Action("Edit", "Rol", new { Roles_id = item.Roles_Id })" class="btn btn-outline-warning btn-sm editar-depa"><i class="fas fa-edit"></i>Editar</a>

                            <a href="@Url.Action("Details", "Rol", new { EsC_Id = item.Roles_Id })" class="btn btn-outline-primary  btn-sm">Detalles <i class="tim-icons icon-zoom-split"></i></a>

                            <button class="d-flex align-items-center justify-content-around btn btn-outline-danger btn-sm flex-grow-1" style="max-width: 100px" onclick="Eliminar(@item.Roles_Id)">
                                <i class="bi bi-trash-fill"></i>
                                Eliminar
                            </button>
                        </div>
                    </div>
            </tr>
        }
    </tbody>
</table>

