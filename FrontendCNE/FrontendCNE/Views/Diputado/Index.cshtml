@model IEnumerable<CNE.Common.Models.DiputadoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Diputado</h1>

<p>
    <button class="btnCreate btn btn-primary">Nuevo</button>
</p>
<table class="table table-striped table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dip_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.partido)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Dip_Votos)
            </th>





            <th> Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dip_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.partido)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.Dip_Votos)
                </td>

                <td style="width: 5%">
                    <div class="w-100" style="max-width: 250px">
                        <div class="d-flex w-100" style="gap: 5px;">
                            <button class="btn btn-outline-warning btn-sm editar-depa" data-depa-id="@item.Dip_Id"><i class="fas fa-edit"></i>Editar</button>

                            <a href="@Url.Action("Details", "Diputado", new { Dip_Id = item.Dip_Id })" class="btn btn-outline-primary  btn-sm">Detalles <i class="tim-icons icon-zoom-split"></i></a>

                            <button class="d-flex align-items-center justify-content-around btn btn-outline-danger btn-sm flex-grow-1" style="max-width: 100px" onclick="Eliminar('@item.Dip_Id')">
                                <i class="bi bi-trash-fill"></i>
                                Eliminar
                            </button>
                        </div>
                    </div>
            </tr>
        }
    </tbody>
</table>



<div class="modal fade" id="ModalCrear" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @*<div class="modal-header">
                   <h5>Crear</h5>
                </div">*@
            <div class="modal-body">
                @Html.Partial("_Create", new CNE.Common.Models.DiputadoViewModel())
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Edit", new CNE.Common.Models.DiputadoViewModel())
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Delete", new CNE.Common.Models.DiputadoViewModel())
            </div>
        </div>
    </div>
</div>




